@model Documentt.Models.Authour

<div class="modal-content bg-white p-6 rounded-lg shadow-lg">
    <div class="flex flex-col md:flex-row gap-6 items-start">
        <img src="@Model.Img" alt="Ảnh tác giả" class="w-full md:w-1/3 h-64 object-cover rounded-lg shadow-md">

        <div class="flex-1">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">@Model.AuthourName</h2>
            <p class="text-gray-700 mb-4 leading-relaxed">@Model.Detail</p>

            <h3 class="text-lg font-semibold text-blue-600 mb-3 border-b pb-1">Tài liệu của tác giả</h3>
            @if (Model.Products != null && Model.Products.Any())
            {
                <ul class="space-y-2">
                    @foreach (var product in Model.Products)
                    {
                        <li>
                            <a asp-controller="Product" asp-action="Detail" asp-route-Id="@product.ProductId" class="text-blue-600 hover:text-blue-800 hover:underline transition">
                                <i class="fas fa-file-alt mr-1"></i>@product.Name
                            </a>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-sm text-gray-500 italic">Tác giả chưa có tài liệu nào.</p>
            }
        </div>
    </div>
</div>
