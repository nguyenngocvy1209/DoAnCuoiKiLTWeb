<!-- New Documents Section -->
<section id="new-documents" class="py-16 bg-gray-100">
    <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-6 text-blue-600">Tài liệu mới nhất</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6" id="new-documents-list">
            @foreach (var item in ViewBag.New as IEnumerable<Documentt.Models.Product>)
            {
                <div class="product-card bg-white rounded-lg shadow-md overflow-hidden transition transform hover:-translate-y-2 hover:shadow-lg">
                    <img src="@item.img" alt="Quản trị chiến lược" class="w-full h-40 object-cover">
                    <div class="p-4">
                        <h3 class="text-lg font-semibold truncate">@item.Name</h3>
                        <p class="text-red-500 font-medium">@item.Price.ToString("N0") đ</p>
                        <p class="text-sm text-gray-600">@item.Category.CategoryName</p>
                        
                        
                        <div class="flex gap-2 mt-2">
                            <a asp-controller="Shoppingcart" asp-action="AddToShoppingCart" asp-route-pId="@item.ProductId">
                                <button class="add-to-cart-btn btn bg-green-600 text-white px-2 py-1 rounded-full hover:bg-green-700 transition text-xs" data-product-id="10"><i class="fas fa-cart-plus mr-1"></i>Thêm vào giỏ</button>
                            </a>
                            <a asp-controller="Product" asp-action="Detail" asp-route-Id="@item.ProductId">
                                <button class="view-details-btn btn bg-blue-600 text-white px-2 py-1 rounded-full hover:bg-blue-700 transition text-xs" data-product-id="10"><i class="fas fa-eye mr-1"></i>Xem chi tiết</button>
                            </a>
                            
                        </div>
                    </div>
                </div>
            }
        </div>
       
        <div class="text-center mt-6">
            <a href="/products.html" class="text-blue-600 hover:underline font-medium">Xem tất cả tài liệu</a>
        </div>
    </div>
</section>

