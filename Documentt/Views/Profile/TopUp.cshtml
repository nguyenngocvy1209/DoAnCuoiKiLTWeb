@model Documentt.Controllers.TopUpViewModel

@{
    ViewData["Title"] = "Nạp tiền vào tài khoản";
    Layout = "_Layout";
}

<div class="container mx-auto py-16 px-4 max-w-md">
    <h1 class="text-4xl font-bold text-center mb-10 text-green-700">
        <i class="fas fa-wallet mr-2"></i> Nạp tiền vào tài khoản
    </h1>

    <div class="bg-white rounded-xl shadow-lg p-6">
        <form asp-action="TopUp" method="post" class="space-y-6">
            @* Hiển thị lỗi toàn cục nếu có *@
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

            <div>
                <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-1">
                    Số tiền muốn nạp (tối thiểu 1.000 VNĐ)
                </label>
                <input asp-for="Amount"
                       type="number"
                       step="1000"
                       min="1000"
                       placeholder="Nhập số tiền (VND)"
                       class="w-full px-4 py-3 border rounded-lg shadow-sm focus:ring-2 focus:ring-green-500 focus:outline-none transition" />
                <span asp-validation-for="Amount" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div class="flex items-center justify-between mt-6">
                <button type="submit"
                        class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg transition">
                    <i class="fas fa-check-circle mr-1"></i> Xác nhận
                </button>

                <a asp-action="Index" class="text-sm text-gray-600 hover:text-blue-600 transition underline">
                    <i class="fas fa-arrow-left mr-1"></i> Quay lại hồ sơ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
