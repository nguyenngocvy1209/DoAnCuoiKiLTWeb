@page
@model LoginModel

<section class="py-16 bg-gray-50 min-h-screen flex items-center justify-center">
    <div class="bg-white rounded-xl shadow-lg p-8 w-full max-w-md">
        <h2 class="text-3xl font-bold text-center text-blue-600 mb-6">Đăng nhập vào StudyDocs</h2>

        <form id="login-form" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

            <div id="validation-summary" class="text-red-500 text-sm hidden" role="alert"></div>

            <div class="relative">
                <label for="login-email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <div class="relative">
                    <input type="email" id="login-email" asp-for="Input.Email" placeholder="Email của bạn" class="w-full px-4 py-2 pl-10 border rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none transition" aria-required="true" autocomplete="username">
                    <i class="fas fa-envelope absolute left-3 top-3 text-gray-400"></i>
                </div>
                <p id="login-email-error" class="text-red-500 text-sm mt-1 hidden"></p>
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="relative">
                <label for="login-password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                <div class="relative">
                    <input type="password" id="login-password" asp-for="Input.Password" placeholder="Mật khẩu của bạn" class="w-full px-4 py-2 pl-10 border rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none transition" aria-required="true" autocomplete="current-password">
                    <i class="fas fa-lock absolute left-3 top-3 text-gray-400"></i>
                </div>
                <p id="login-password-error" class="text-red-500 text-sm mt-1 hidden"></p>
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input type="checkbox" id="remember-me" asp-for="Input.RememberMe" class="h-4 w-4 text-blue-600 border-gray-300 rounded">
                    <label for="remember-me" class="ml-2 block text-sm text-gray-900">Ghi nhớ đăng nhập</label>
                </div>
                <a href="/forgot-password.html" class="text-blue-600 hover:underline text-sm">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-lg font-semibold transition">Đăng nhập</button>

            <div class="text-center mt-4">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-sm text-blue-600 hover:underline">Chưa có tài khoản? Đăng ký ngay</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/login.js"></script>
}
