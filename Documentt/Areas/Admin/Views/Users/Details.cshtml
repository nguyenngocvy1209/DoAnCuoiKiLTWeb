@model Documentt.Models.UserViewModel

@{
    ViewData["Title"] = "Chi tiết Người dùng";
    Layout = "_Layout";
}

<div class="container mx-auto py-12 px-4 max-w-xl">
    <h1 class="text-4xl font-bold text-center text-indigo-700 mb-8">👤 Chi tiết Người dùng</h1>

    <div class="bg-white shadow-xl rounded-2xl p-6">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
            <div>
                <dt class="text-sm font-medium text-gray-500">👨‍💻 Tên đăng nhập</dt>
                <dd class="text-lg font-semibold text-gray-800">@Html.DisplayFor(model => model.UserName)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">📧 Email</dt>
                <dd class="text-lg font-semibold text-gray-800">@Html.DisplayFor(model => model.Email)</dd>
            </div>

            <div class="sm:col-span-2">
                <dt class="text-sm font-medium text-gray-500">🔐 Vai trò</dt>
                <dd class="text-lg font-semibold text-gray-800">@string.Join(", ", Model.Roles)</dd>
            </div>
        </dl>

        <div class="mt-6 flex flex-col sm:flex-row justify-between gap-4">
            <a asp-action="Index" class="text-gray-600 hover:underline text-sm sm:text-base">
                ⬅️ Quay lại danh sách
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="bg-red-600 text-white font-semibold px-4 py-2 rounded-lg hover:bg-red-700 transition">
                🗑️ Xóa Người dùng
            </a>
        </div>
    </div>
</div>
