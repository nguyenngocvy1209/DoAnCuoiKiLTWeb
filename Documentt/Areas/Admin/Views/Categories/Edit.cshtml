@model Documentt.Models.Category

@{
    ViewData["Title"] = "Sửa Danh mục";
    Layout = "_Layout";
}

<div class="container mx-auto py-12 px-4 max-w-xl">
    <h1 class="text-3xl font-extrabold text-center text-indigo-700 mb-8">✏️ Sửa Danh mục</h1>

    <div class="bg-white shadow-lg rounded-xl p-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

            <input type="hidden" asp-for="CategoryId" />

            <div class="mb-5">
                <label asp-for="CategoryName" class="block text-gray-700 font-medium mb-2">Tên danh mục</label>
                <input asp-for="CategoryName"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none text-gray-800" />
                <span asp-validation-for="CategoryName" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-between items-center mt-6">
                <button type="submit"
                        class="bg-blue-600 text-white px-5 py-2 rounded-lg hover:bg-blue-700 transition font-medium">
                    💾 Lưu thay đổi
                </button>
                <a asp-action="Index" class="text-gray-600 hover:text-gray-800 hover:underline transition">
                    ↩️ Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
