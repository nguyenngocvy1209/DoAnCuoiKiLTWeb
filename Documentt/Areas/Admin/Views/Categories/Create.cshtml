@model Documentt.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục";
    Layout = "_Layout";
}

<div class="container mx-auto px-4 py-12 max-w-2xl">
    <div class="bg-white rounded-2xl shadow-lg p-8">
        <h1 class="text-3xl font-extrabold text-indigo-700 mb-6 text-center">
            ➕ Thêm Danh mục mới
        </h1>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded-lg mb-6 shadow-sm">
                ❌ @TempData["ErrorMessage"]
            </div>
        }

        <form asp-action="Create" method="post" novalidate>
            <div class="mb-5">
                <label asp-for="CategoryName" class="block text-gray-700 font-medium mb-1">
                    Tên danh mục <span class="text-red-500">*</span>
                </label>
                <input asp-for="CategoryName"
                       class="w-full px-4 py-2 border rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-400 focus:border-transparent" />
                <span asp-validation-for="CategoryName" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <div class="flex justify-between mt-8">
                <a asp-action="Index"
                   class="inline-flex items-center text-gray-600 hover:text-gray-900 transition">
                    ← Quay lại danh sách
                </a>
                <button type="submit"
                        class="bg-indigo-600 text-white font-semibold px-6 py-2 rounded-lg hover:bg-indigo-700 transition">
                    💾 Lưu danh mục
                </button>
            </div>
        </form>
    </div>
</div>
