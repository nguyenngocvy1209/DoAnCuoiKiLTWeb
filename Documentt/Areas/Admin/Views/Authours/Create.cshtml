@model Documentt.Models.Authour

@{
    ViewData["Title"] = "Thêm Tác giả";
    Layout = "_Layout";
}

<div class="container mx-auto py-12 px-4 max-w-2xl">
    <h1 class="text-3xl font-extrabold text-center mb-8 text-indigo-700">
        ✍️ Thêm Tác giả mới
    </h1>

    <div class="bg-white rounded-2xl shadow-lg p-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <!-- Ảnh tác giả -->
            <div class="mb-5">
                <label asp-for="Img" class="block font-medium text-gray-700 mb-1">Ảnh tác giả (đường dẫn)</label>
                <input asp-for="Img" placeholder="/images/authors/author1.jpg"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" />
                <span asp-validation-for="Img" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Tên tác giả -->
            <div class="mb-5">
                <label asp-for="AuthourName" class="block font-medium text-gray-700 mb-1">Tên tác giả</label>
                <input asp-for="AuthourName"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" />
                <span asp-validation-for="AuthourName" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Mô tả -->
            <div class="mb-5">
                <label asp-for="Detail" class="block font-medium text-gray-700 mb-1">Mô tả</label>
                <textarea asp-for="Detail" rows="4"
                          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none"></textarea>
                <span asp-validation-for="Detail" class="text-sm text-red-500 mt-1 block"></span>
            </div>

            <!-- Nổi bật -->
            <div class="mb-6 flex items-center">
                <input asp-for="noibat" type="checkbox" class="h-5 w-5 text-indigo-600 mr-3 rounded focus:ring-indigo-500 border-gray-300" />
                <label asp-for="noibat" class="text-gray-700 font-medium">Hiển thị nổi bật</label>
            </div>

            <!-- Nút submit -->
            <div class="flex justify-between items-center">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-5 rounded-lg transition">
                    <i class="fas fa-plus-circle mr-2"></i>Thêm tác giả
                </button>
                <a asp-action="Index" class="text-gray-600 hover:underline hover:text-indigo-600 transition text-sm">
                    ⬅️ Quay lại danh sách
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
